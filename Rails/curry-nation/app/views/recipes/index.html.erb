<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<%= form_tag recipes_path, :method => 'get', id: 'recipes_search' do %>
    <div class='input-group input-group-lg'>
      <%= text_field_tag :search, params[:search], class: 'form-control input-lg' %>
      <span class="input-group-btn">
         <%= submit_tag "Search", :name => nil,  class: "btn btn-primary btn-lg" %>
      </span>
    </div>
<% end %>
<br>
<div id = 'recipes'>
  <%=render 'recipes'  %>
</div>
<%= link_to 'New Recipe', new_recipe_path, class: "btn btn-success" %>
