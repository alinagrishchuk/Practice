<p id="notice"><%= notice %></p>

<h1>Listing Surveys</h1>

<% @surveys.each do |survey| %>
    <div class="article">
      <h4><%= link_to survey.name, survey %></h4>
      <%= pluralize(survey.questions.size, "Question") %>
      <%= link_to "delete", survey, method: :delete, data: { confirm: 'Are you sure?' }%>
    </div>
<% end %>

<br>

<%= link_to 'New Survey', new_survey_path %>
