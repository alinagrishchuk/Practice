<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @survey.name %>
</p>
<ol>
  <% for question in @survey.questions %>
    <li><%= question.content %></li>
      <ol>
        <% for answer in question.answers %>
            <li><%= answer.content %></li>
        <% end %>
      </ol>
  <% end %>
</ol>
<%= link_to 'Edit', edit_survey_path(@survey) %> |
<%= link_to 'Back', surveys_path %>
